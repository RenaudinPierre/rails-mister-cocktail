<h1>Coktails#show</h1>
<p>Find me in app/views/coktails/show.html.erb</p>

<h1><%= @cocktail.name %></h1>


<% @cocktail.doses.each do |dose| %>
  <p><%= dose.ingredient.name %> - <%= dose.description %></p>
  <%= link_to 'Delete Dose', dose_path(dose), method: :delete %>
<% end %>




<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :ingredient_id, collection: @ingredients  %>
  <%= f.input :description %>
  <%= f.button :submit  %>
<% end %>
